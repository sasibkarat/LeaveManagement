@model EmployeeLeaveManagement.ViewModels.EditEmployeeDetailsViewModel

@{
    ViewBag.Title = "EditProfile";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Change Profile</h1>
        <form novalidate="novalidate" action="/account/changeprofile" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtName">First Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter First name" name="FirstName" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.FirstName" />
                    
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtName">Last Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter Last name" name="LastName" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.LastName" />
                    
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtEmail">Email</label>
                    @Html.HiddenFor(temp => temp.Email)
                    <span>@Model.Email</span>
                </div>

                <div class="form-group col-sm-6">
                    <label for="txtMobile">Mobile</label>
                    <input type="text" class="form-control" id="txtMobile" placeholder="Mobile" name="ContactNumber" required="required" pattern="^[789]\d{9}$" value="@Model.ContactNumber" />
                    
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtName">Designation</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter Designation" name="Designation" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.Designation" />
                    
                    <div class="invalid-feedback">
                        Please enter Designation [alphabets only].
                    </div>
                </div>
            </div>
            <input name="EmployeeID" value=@Model.EmployeeID hidden>
            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>
</div>

<script>

    $("a[href='/account/changeprofile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>