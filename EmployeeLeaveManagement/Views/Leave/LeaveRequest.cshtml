@model EmployeeLeaveManagement.ViewModels.LeaveViewModel

@{ ViewBag.Title = "Leave Request"; }

<div class="row">
    <div class="col-sm-12">
        <h1>Leave Request</h1>
        <form novalidate="novalidate" action="/leave/leaverequest" method="post" class="needs-validation">
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtName">Start Date</label>
                    <input type="date" class="form-control" id="txtStartDate" placeholder="dd-mm-yyyy" value=" " min="DateTime.today" max="2030-12-31" name="StartDate" required="required" />

                    <div class="invalid-feedback">
                        Please enter proper date.
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtName">End Date</label>
                    <input type="date" class="form-control" id="txtEndDate" placeholder="dd-mm-yyyy" value=" " min="DateTime.today" max="2030-12-31" name="EndDate" required="required" />
                    <div class="invalid-feedback">
                        Please enter proper date.
                    </div>
                </div>
            </div>



            <div class="form-group col-sm-12">
                <label for="exampleFormControlTextarea1">Leave Reason</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="LeaveReason" required="required"></textarea>
            </div>
            @Html.ValidationSummary()
            <button onclick="myFunction()" class="btn btn-primary">submit</button>


    </div>
    </form>

</div>
    </div>




<script>
    function myFunction() {
        alert("Leave requested succesfully");
    }






    $("a[href='/account/leaverequest']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>
